<div class="container">
<h1>Rails Task Manager</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to "#{task.title}", task_path(task["id"]) %>
    <%= link_to "[ Edit |", task_edit_path(task["id"]), class: "edit-delete" %>
    <%= link_to "Delete ]", task_path(task["id"]), class: "edit-delete", method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add new task', new_path, class: "button" %>
</div>
